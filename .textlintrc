{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 200
      }
    },
    "preset-ja-spacing": true,
    "prh": {
      "rulePaths": [
        "textlint/rules/prh/WEB+DB_PRESS.yml"
      ]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "SRE",
        "/:::message[\\s\\S]<!-- ignore -->*?:::/m"
      ]
    }
  }
}
