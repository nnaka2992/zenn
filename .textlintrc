{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 200
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      },
    },
    "preset-ja-spacing": true,
    "prh": {
      "rulePaths": [
        "textlint/rules/prh/WEB+DB_PRESS.yml"
      ]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "SRE",
        "/:::message <!-- ignore -->[\\s\\S]*?:::/m", # 対象のメッセージブロックのエラーを無視
        "/<!-- ignore-start -->[\\s\\S]*?<!-- ignore-end -->/m", # 任意の箇所のエラーを無視できるよう設定
        "/:::/m", # コールアウトのエラーを無視
        "/:::.*/m" # コールアウトのエラーを無視
      ]
    }
  }
}
