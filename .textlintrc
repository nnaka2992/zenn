{
  "rules": {
    "preset-ja-technical-writing": {
      "sentence-length": {
        "max": 200
      },
      "no-mix-dearu-desumasu": {
        "preferInHeader": "",
        "preferInBody": "ですます",
        "preferInList": "である",
        "strict": false
      },
    },
    "preset-ja-spacing": true,
    "prh": {
      "rulePaths": [
        "textlint/rules/prh/WEB+DB_PRESS.yml"
      ]
    }
  },
  "filters": {
    "comments": true,
    "allowlist": {
      "allow": [
        "SRE",
        "/:::message <!-- ignore -->[\\s\\S]*?:::/m"
      ]
    }
  }
}
